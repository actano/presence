$color = #333333
$avaiable = #a5c1d4
$absent = #da777b
$away = #faf0a6
$widgetbackground = #f3f3f3
$font-family = 'Proxima Nova', Arial, Verdana, sans-serif

$memberwidth = 27rem
$border = 1px solid white

html
    font 73% / 125% $font-family normal
    color $color

html, *
    box-sizing border-box
body
    background-color $widgetbackground
    &.framed
        margin 0
        h1
            display none
ul.teams
    display flex
    flex-wrap wrap
    justify-content space-around
    margin 0
    & > li
        background-color white
        margin-bottom 2rem
    ul.members
        position relative
        background-color $widgetbackground

        li.member
            font-size 125%
            vertical-align baseline
            border $border
            margin 0.2rem 0 0 0
            padding 0.4rem
            padding-left 4.1rem
            position relative
            width $memberwidth
            height 4rem
            background-color white
            &:last-child
                margin-bottom 0.2rem
            span
                display block
                text-overflow ellipsis
                white-space nowrap
                overflow hidden
                padding 0 0.3rem
                line-height 2.6
            img
                width 3rem
                left 0.5rem
                top 0.5rem
                position absolute
                border-radius 50%
                display block
                

        &.hasSprint li li
        &:not(.hasSprint) li.member
            background-color $avaiable
        li.member
            &.absent
            .absent
            &.public-holiday
            .public-holiday
                color darkslategray
                text-decoration line-through
                background-color $absent
            &.public-holiday
            .public-holiday
                background-image repeating-linear-gradient(-45deg, alpha(gray, 0.2) 0, alpha(gray, 0.2) 4px, transparent 4px, transparent 8px)
            &.away
            .away
                background-color $away
            &.awayPartial
            .awayPartial
                background-image repeating-linear-gradient(-45deg, $away 0, $away 4px, transparent 4px, transparent 8px)
            &.preWeekend:not(:last-child)
            .preWeekend:not(:last-child)
                margin-right 0.3rem

            .filllevel
                display flex
                height 100%
                align-items flex-end
                li
                    flex 1 0 auto
                    border-left $border
                    height 50%
                    transition all 100ms
                    font-size 80%
                    line-height 200%
                    padding 0 0.3rem
                    &:not(.today)
                        position relative
                    &:first-child
                        border-left none
                    &.today
                        font-size 100%
                        line-height 1.6
                        height 100%
                        width 50%
                    .date
                        display none
                        overflow visible
                        line-height inherit
                        padding 0 0.3rem
                    &:hover .date
                        display block
                        background white
                        position absolute
                        bottom 100%
                        left -1rem
                        &:after
                            content ''
                            position absolute
                            top 100%
                            left 1.1rem
                            width 0
                            height 0
                            border 0.5rem solid transparent
                            border-top-color white
                    span
                        padding 0
h1
    color #1a76d6

.headline
    font-size 100%
    padding 0 0.4rem !important
    & > h2
        display flex
        vertical-align middle
        justify-content space-between
        align-items baseline
    small
        font-weight normal
    time
        font-weight normal
        font-size 1rem
        float right
        color #999

.summary
    font-size 100% !important
    height auto!important
    div
        font-weight normal
        padding 0.3rem
            
    div
        display flex
        justify-content space-between


h2 
    margin 1.3rem 0 
    &.error
        background-color #7d0000
        color #fff
        font-size 100%
        vertical-align baseline
        border $border
        line-height 1.6
        padding 0.3rem
        position relative
        width $memberwidth
        text-align center
        margin-left 0
ul
    list-style none
    padding 0

form
    display inline-block
    input
        border none
        font 60% / 125% $font-family normal
        height 2.1rem
        padding 0.4rem
        color $color
        vertical-align text-bottom


