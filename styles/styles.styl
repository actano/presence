html
    font 80% / 125% Arial, Verdana, sans-serif normal

html, *
    box-sizing border-box

ul.teams
    display flex
    justify-content space-between
    max-width 56rem
    flex-wrap wrap

    li li
        font-size 125%
        vertical-align baseline
        border 1px solid
        margin 0.5em 0
        line-height 1.6
        padding-left 2.2rem
        position relative
        border-radius 0.3rem
        width 18rem
        background-color rgba(0, 125, 0, 0.2)
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        &.absent
            color gray
            text-decoration line-through
            background-color rgba(125, 0, 0, 0.2)
        &.away
            background-color rgba(255, 255, 125, 0.2)
        &.awayPartial
            background-image repeating-linear-gradient(-45deg, rgba(255,255,125,0.8) 0, rgba(255,255,125,0.8) 4px, transparent 4px, transparent 8px)

        img
            height 100%
            left 0
            position absolute

h1
    font-size 125%

h2
    font-size 100%

ul
    list-style none
    padding 0

form
    display inline-block
    input
        border 1px solid
        font 100% / 125% Arial, Verdana, sans-serif bold
        background rgba(0, 125, 0, 0.1)
        border-radius 0.3rem
        height 2.1rem




