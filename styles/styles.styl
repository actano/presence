$avaiable = rgb(0, 125, 0)
$absent = rgb(125, 0, 0)
$away = rgb(255, 255, 125)

$memberwidth = 27rem
$border = 1px solid black
$borderradius = 0.3rem

html
    font 80% / 125% Arial, Verdana, sans-serif normal

html, *
    box-sizing border-box

ul.teams
    display flex
    flex-wrap wrap
    justify-content space-around

    ul.members
        position relative
        li.member
            font-size 125%
            vertical-align baseline
            border $border
            margin 0.5em 0
            line-height 1.6
            padding-left 2rem
            position relative
            border-radius $borderradius
            width $memberwidth
            height 2.1rem
            span
                display block
                text-overflow ellipsis
                white-space nowrap
                overflow hidden
                padding 0 0.3rem
            img
                width 2rem
                left 0
                position absolute
                border-right $border

        &.hasSprint li li
        &:not(.hasSprint) li.member
            background-color alpha($avaiable, 0.3)
        li.member
            &.absent
            .absent
            &.public-holiday
            .public-holiday
                color darkslategray
                text-decoration line-through
                background-color alpha($absent, 0.3)
            &.public-holiday
            .public-holiday
                background-image repeating-linear-gradient(-45deg, alpha(gray, 0.2) 0, alpha(gray, 0.2) 4px, transparent 4px, transparent 8px)
            &.away
            .away
                background-color alpha($away, 0.3)
            &.awayPartial
            .awayPartial
                background-image repeating-linear-gradient(-45deg, alpha($away, 0.8) 0, alpha($away, 0.8) 4px, transparent 4px, transparent 8px)
            .filllevel
                display flex
                height 100%
                align-items flex-end
                li
                    flex 1 0 auto
                    border-left $border
                    height 100%
                    transition all 100ms
                    overflow hidden
                    font-size 80%
                    line-height 200%
                    padding 0 0.3rem
                    &:first-child
                        border-left none
                    &.today
                        font-size 100%
                        line-height 1.6
                        height 100%
                        width 50%
                    .date
                        display none
                    &:hover .date
                        display block
                        flex 0
                    span
                        padding 0

h1, h2
    font-size 125%
    margin-left 2.0rem
    padding-left 0.3rem

h3
    font-size 100%
    margin 0
    margin-left 2.0rem
    border $border
    border-bottom-width 0
    border-radius $borderradius $borderradius 0 0
    padding 0.3rem
    margin-bottom -0.7rem
    &.summary
        margin-top -0.7rem
        margin-bottom inherit
        border-top-width 0
        border-bottom-width 1px
        border-radius 0 0 $borderradius $borderradius
        div
            font-weight normal
            padding 0.3rem
            border-radius $borderradius
    div
        display flex
        justify-content space-between


h2.error
    background-color #7d0000
    color #fff
    font-size 100%
    vertical-align baseline
    border $border
    line-height 1.6
    padding 0.3rem
    position relative
    border-radius $borderradius
    width $memberwidth
    text-align center
    margin-left 0
ul
    list-style none
    padding 0

form
    display inline-block
    input
        border 1px solid
        font 100% / 125% Arial, Verdana, sans-serif bold
        background rgba(0, 125, 0, 0.1)
        border-radius $borderradius
        height 2.1rem


