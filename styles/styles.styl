html
    font 80% / 125% Arial, Verdana, sans-serif normal

html, *
    box-sizing border-box

ul.teams
    display flex
    flex-wrap wrap
    justify-content space-around

    ul.members
        position relative
        &.hasSprint
            padding-top 2.1rem
        li.member
            font-size 125%
            vertical-align baseline
            border 1px solid
            margin 0.5em 0
            line-height 1.6
            padding-left 2.2rem
            position relative
            border-radius 0.3rem
            width 27rem
            height 2rem
            span
                display block
                text-overflow ellipsis
                white-space nowrap
                overflow hidden
            img
                height 100%
                left 0
                position absolute

        &.offline
            .filllevel
                display none

        .summary
            font-size 100%
            background-color transparent
            padding-left 0.3rem
            position absolute
            top -0.5rem
            line-height 1.95
            border-radius 0.3rem
            border 1px solid
            width 27rem
            height 2rem

        &.hasSprint li Li
        &.online:not(.hasSprint) li.member
            background-color rgba(0, 125, 0, 0.2)
        &.online li.member
            &.absent
            .absent
                color gray
                background-color rgba(125, 0, 0, 0.2)
            &.away
            .away
                background-color rgba(255, 255, 125, 0.2)
            &.awayPartial
            .awayPartial
                background-image repeating-linear-gradient(-45deg, rgba(255,255,125,0.8) 0, rgba(255,255,125,0.8) 4px, transparent 4px, transparent 8px)
            .filllevel
                position absolute
                display flex
                height 100%
                bottom 0
                left 0
                right 0
                align-items flex-end
                padding-left 1.9rem
                li
                    flex 1 0 auto
                    border-left 1px solid
                    height 100%
                    transition all 100ms
                    overflow hidden
                    font-size 80%
                    line-height 200%
                    padding 0 0.3rem
                    &.today
                        height 100%
                        min-width 50%
                    .date
                        display none
                    &:hover .date
                        display block
                        flex 0

            &:hover .filllevel li
                height 100%!important

h1
    font-size 125%

h2
    font-size 100%
    &.error
        background-color #7d0000
        color #fff
        font-size 100%
        vertical-align baseline
        border 1px solid black
        line-height 1.6
        padding 0.3rem
        position relative
        border-radius 0.4rem
        width 18rem
        text-align center
ul
    list-style none
    padding 0

form
    display inline-block
    input
        border 1px solid
        font 100% / 125% Arial, Verdana, sans-serif bold
        background rgba(0, 125, 0, 0.1)
        border-radius 0.3rem
        height 2.1rem


