$actanoBlue = #1a76d6

$colorText = #333333

$colorSprintStart = green
$colorSprintEnd = #da777b

$colorAvailable = $actanoBlue
$colorAbsent = #da777b
$colorAway = #fff
$colorHoliday = alpha(gray, 0.2)

$bgcolorWeekEven = #fff
$colorWeekEven = #999
$bgcolorWeekOdd = #f8f8f8
$colorToday = #e3e9ec

$widgetbackground = #f3f3f3
$teambackground = #fff
$font-family = 'Proxima Nova', Arial, Verdana, sans-serif

$memberwidth = 27rem
$border = 1px solid $teambackground

$dayHeight = 17px
$dayWidth = 13px
$avatarSize = 40px

striped(color, direction = -45deg)
    repeating-linear-gradient(direction, color 0, color 4px, transparent 4px, transparent 8px)

html
    font normal 73% / 125% $font-family
    color $colorText

html, *
    box-sizing border-box
body
    background-color $widgetbackground
    &.framed
        margin 0
        h1
            display none
ul.teams
    display flex
    flex-wrap wrap
    justify-content space-around
    margin 0

    li.team
        background-color $teambackground
        margin-bottom 2rem
        overflow hidden

table
    border-collapse collapse
    col.weekEven
        background $bgcolorWeekEven
    col.weekOdd
        background $bgcolorWeekOdd
    col.today
        background $colorToday
        width ($dayWidth * 2)
    col.weekEven + col.weekOdd
    col.weekOdd + col.weekEven
        border-left 3px solid #fff
    col.offSprint + col.inSprint
        border-left 1px solid $colorSprintStart
    col.inSprint + col.offSprint
        border-left 1px solid $colorSprintEnd

    th, td
        padding 0
        margin 0

    thead
        th
            text-align center
            font-weight 600
            &.weekEven
                color $colorWeekEven

    tfoot
        td
            background-color alpha($colorAbsent, 0.2)

            div
                background-color lighten($colorAvailable, 80%)
                text-wrap none
                overflow visible
                padding 2px

    tbody
        tr.selected th span
            font-weight bold
            text-decoration underline

        tr.absent
            th img
                opacity 0.3

        th
            text-align left
            font-weight normal
            position relative

            img
                display block
                width $avatarSize
                height @width

            // span for member name at head
            span
                position absolute
                left (2px + $avatarSize)
                top 2px
                width 200px
                text-shadow 1px 1px 2px white
        td
            vertical-align bottom
            padding 0 1px

            div
                background-color $colorAvailable
                height $dayHeight
                width $dayWidth
                margin-bottom 4px
                position relative

                span
                    position absolute
                    width 100%

            &.today div
            &.today div span
                width ($dayWidth * 2)

            &:not(.today) div
                opacity 0.2

.status
    &.absent
    &.public-holiday
        color darkslategray
        text-decoration line-through
        background-color $colorAbsent
    &.public-holiday
        background-image striped($colorHoliday)
    &.away
        background-color $colorAway
        border 4px solid $actanoBlue

h1
    color $actanoBlue

.headline
    margin 0
    font-size 150%
    padding 0.6rem
    display flex
    vertical-align middle
    justify-content space-between
    align-items baseline
    small
        font-weight normal
    time
        font-weight normal
        font-size 1rem
        color #999

.summary
    font-size 100%
    height auto
    div
        font-weight normal
        padding 0.3rem
            
    div
        display flex
        justify-content space-between


h2 
    margin 0.3rem 0
    &.error
        background-color #7d0000
        color #fff
        font-size 100%
        line-height 1.6
        padding 0.3rem
        text-align center

ul
    list-style none
    padding 0

form
    display inline-block
    input
        border none
        font 60% / 125% $font-family normal
        height 2.1rem
        padding 0.4rem
        color $colorText
        vertical-align text-bottom


