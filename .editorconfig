# This file is for unifying the coding style for different editors and IDEs
# Download a plugin for your editor at editorconfig.org.

root = true


[*]
charset = utf-8

[**.{coffee,js,json,styl,jade,yaml,yml}]
indent_style = space
indent_size = 4
insert_final_newline = true

[{package,npm-shrinkwrap}.json]
indent_style = space
indent_size = 2

# Makefiles
[**.mk]
indent_style = tab
