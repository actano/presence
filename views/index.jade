- var deDate = 'DD.MM.'

mixin teamHeadline(team)
    h2.headline
        name=team.name
        if team.head
            small=' ' + team.head
        if team.sprint.scrum
            time=team.sprint.start.format(deDate) + ' – ' + team.sprint.end.format(deDate)

mixin teamMemberRow(team, member)
    tr(class=member.cssClass)
        th(scope=row)
            img(src=member.image_url + '?s=40')
            span=member.name
        for memberDate in member.dates
            - var today = isToday(memberDate.date)
            td(class=today ? 'today' : null)
                span.status(class=memberDate.cssClass, title=memberDate.description)
                    if today
                        span=member.name

mixin teamScrumFooter(team, cells)
    tfoot
        tr
            td(colspan=cells)
                - var percentage = team.summary.percentage
                .percentage(style='width: ' + percentage + '%')=team.summary.description

mixin calendarHead(queryDates)
    col.head
    for date in queryDates
        - var today = isToday(date) ? 'today' : null
        - var week = date.week() % 2 ? 'weekOdd' : 'weekEven'
        col(class=[today, week])
    thead
        tr
            th
            for date in queryDates
                th(scope=col)=date.format('D')

mixin renderTeam(team)
    - var cells = team.queryDates.length + 1
    table
        caption
            +teamHeadline(team)
        +calendarHead(team.queryDates)
        tbody
            for member in team.members
                +teamMemberRow(team, member)
        if team.sprint.scrum
            +teamScrumFooter(team, cells)

    if team.statusDescription
        h2.error=team.statusDescription

doctype
html
    head
        title Actano - Absentees
        link(rel='stylesheet' href='/styles.css')
        meta(name='viewport', content='width = device-width')
    body
        script.
            if (parent.frames.length > 0) {
                document.body.classList.add('framed');
            }

        h1 Presence for  
            form(action='/')
                input(type='date' name='date' value=teams[0].date, onchange='document.forms[0].submit()')

        ul.teams
            for team in teams
                li.team(id=team.name)
                    +renderTeam(team)
