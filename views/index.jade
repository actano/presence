doctype
html
    head
        title Actano - Absentees
        link(rel='stylesheet' href='/styles.css')
    body
        h1 Presence for&nbsp;
            form(action='/')
                input(type='date' name='date' value=results[0].date, onchange='document.forms[0].submit()')

        ul.teams
            for result in results
                li(id=result.name)
                    h2=result.name
                        if result.sprint
                            ='-' + (result.sprint.count + 1) + ' '
                            small
                                | (
                                =result.sprint.start.format('DD. MMM')
                                |  - 
                                =result.sprint.end.format('DD. MMM')
                                | )
                    ul
                        for member in result.members
                            - styleClass = ''
                            - if (result.absentees.indexOf(member.name) != -1) {styleClass='absent'}
                            - if (result.aways.indexOf(member.name) != -1) {styleClass='away'}
                            li(class=styleClass)
                                img(src=member.image_url)
                                =member.name